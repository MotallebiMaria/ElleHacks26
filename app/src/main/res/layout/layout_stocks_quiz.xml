<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="24dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/stock" />

            <TextView
                android:id="@+id/lessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="Stocks "
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#3C0366"/>
        </LinearLayout>

        <!-- Subtopic / Question Label -->
        <TextView
            android:id="@+id/subtopicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz 1: Basics of Stocks"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1565C0"
            android:background="#A6E3FF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Quiz Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <!-- Question -->
            <TextView
                android:id="@+id/questionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is a stock?"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#3C0366"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <!-- Options Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="6dp">
                    <Button
                        android:id="@+id/option1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A type of money"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:backgroundTint="#A6E3FF"
                        android:textColor="#1565C0"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="6dp">
                    <Button
                        android:id="@+id/option2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A type of debt"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:backgroundTint="#A6E3FF"
                        android:textColor="#1565C0"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="6dp">
                    <Button
                        android:id="@+id/option3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="A type of card"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:backgroundTint="#A6E3FF"
                        android:textColor="#1565C0"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="6dp">
                    <Button
                        android:id="@+id/option4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Something else"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:backgroundTint="#A6E3FF"
                        android:textColor="#1565C0"/>
                </FrameLayout>
            </GridLayout>

            <!-- Next Button -->
            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textStyle="bold"
                android:textSize="18sp"
                android:backgroundTint="#1565C0"
                android:textColor="#FFFFFF"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
