<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Lesson Card with Cartoon Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"


            android:outlineProvider="background"
            android:clipToOutline="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:outlineProvider="background"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/stock"
                    android:layout_marginRight="20dp"/>


                <TextView
                    android:id="@+id/lessonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="8dp"
                    android:shadowRadius="2"
                    android:text="Stocks"
                    android:textColor="#3C0366"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </LinearLayout>



            <TextView
                android:id="@+id/subtopicTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:background="#A6E3FF"
                android:text="Lesson 1: Owning a Small Piece of a Company"
                android:textColor="#1565C0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:layout_gravity="center_horizontal" />

            <!-- Content in Cartoon Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"

                android:outlineProvider="bounds">

                <TextView
                    android:id="@+id/lessonContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A stock means you own a small piece of a company. When you buy a stock, you are investing your money and becoming a part-owner. For example, if a company sells toys and does well, the value of your stock might go up. If the company doesnâ€™t do well, the value might go down. Stocks can help people grow their money over time, but they also come with risks.
"
                    android:textSize="18sp"
                    android:textColor="#5D4037"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>

            <!-- Cartoon Icons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">



            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:textSize="18sp"
            android:backgroundTint="#1565C0"
            android:textColor="#FFFFFF"
      />

        <!-- Simple Cartoon Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#76C4FF"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="40dp" />

    </LinearLayout>
</ScrollView>